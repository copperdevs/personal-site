---
import Divider from "../../../common-astro/components/Divider.astro";
import FontAwesomeIcon from "../../../common-astro/components/FontAwesomeIcon.astro";
import GithubRecentCommit from "./GithubRecentCommit.astro"
---

<footer>
  <div class="footer-content">
    <div class="footer-left">
      <slot />
      <span style="display: inline-block">
        <GithubRecentCommit/>
      </span>
    </div>

    <div class="footer-right">
      <h2 aria-label="Footer social icon links">
        <FontAwesomeIcon iconName="fa-solid fa-code" targetUrl="https://github.com/copperdevs/personal-site" />
        <Divider />
        <FontAwesomeIcon iconName="fa-solid fa-bug" targetUrl="https://github.com/copperdevs/personal-site/issues" />
      </h2>
    </div>
  </div>
</footer>
