---
interface Props {
  title: string;
}

const { title } = Astro.props;

import "../../common-astro/style/style.css";
import LinkRedirect from "../../common-astro/components/LinkRedirect.astro";
import NavBar from "../components/Navigation/NavBar.astro";
import BaseLayout from "./BaseLayout.astro";
---

<BaseLayout
  title={title}
  description="copper devs websites and stuff"
  pageTitle="copper devs websites"
>
  <LinkRedirect badUrls={["copperdevs.pages.dev"]} targetUrl="copperdevs.com" />
  <NavBar
    sections={["home", "projects"]}
    links={["/websites/", "/websites/projects"]}
    icons={["fa-brands fa-github"]}
    iconUrls={["https://github.com/copperdevswebsites"]}
  />
  <slot />
</BaseLayout>
