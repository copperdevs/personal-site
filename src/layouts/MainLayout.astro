---
interface Props {
  title: string;
}

const { title } = Astro.props;

import "../../common-astro/style/style.css";
import LinkRedirect from "../../common-astro/components/LinkRedirect.astro";
import NavBar from "../components/Navigation/NavBar.astro";
import BaseLayout from "./BaseLayout.astro";
---

<BaseLayout
  title={title}
  description="my funny personal site for me to put crap on :3"
  pageTitle="copperdevs"
>
  <LinkRedirect badUrls={["copperdevs.pages.dev"]} targetUrl="copperdevs.com" />
  <NavBar
    sections={["home", "projects"]}
    links={["/", "/projects"]}
    socials={["discord", "youtube", "github", "twitch"]}
  />
  <slot />
</BaseLayout>
