---
interface Props {
  title: string;
}

const { title } = Astro.props;

import { ViewTransitions } from "astro:transitions";
import "../../common-astro/style/style.css";
import FontAwesome from "../../common-astro/components/FontAwesome.astro";
import LinkRedirect from "../../common-astro/components/LinkRedirect.astro";
import LinkTextPageTitle from "../../common-astro/components/LinkTextPageTitle.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="my funny personal site for me to put crap on :3"
    />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | copperdevs site</title>
    <ViewTransitions />
    <FontAwesome />
  </head>
  <body>
    <main>
      <LinkRedirect
        badUrls={["copperdevs.pages.dev"]}
        targetUrl="copperdevs.com"
      />
      <slot />
    </main>
  </body>
</html>
